@model IEnumerable<AsparagusEaterApp.DataAccess.Models.User>
@{
    ViewData["Title"] = "Asparagus list";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Asparagus list</h2>
        </div>
    </div>
    <br/><br/>

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
        <tr>
            <th>
                Date
            </th>
            <th>
                Name
            </th>
            <th>
                Email
            </th>
            <th>
                Times eat
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var message in Model)
        {
            <tr>
                <td>
                    @message.UserEatLastDate
                </td>
                <td>
                    @message.UserName
                </td>
                <td>
                    @message.UserEmail
                </td>
                <td>
                    @message.UserTimesEat
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>